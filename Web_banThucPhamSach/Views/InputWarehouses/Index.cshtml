@model IEnumerable<Web_banThucPhamSach.Data.InputWarehouse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    /* Đặt một số margin cho phần container */
    .container {
        margin-top: 20px;
    }

    /* Thiết lập bảng với các thuộc tính Bootstrap */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        table th, table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

    /* Đổi màu tiêu đề bảng */
    th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    /* Màu nền cho các hàng chẵn */
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Hover hiệu ứng cho các dòng */
    tr:hover {
        background-color: #e9ecef;
    }

    /* Thêm padding cho các cột action */
    td:last-child {
        text-align: center;
        padding-right: 20px;
    }

    /* Các nút hành động */
    .btn {
        font-size: 14px;
        padding: 5px 10px;
        margin: 2px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Các nút tạo mới */
    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Hiển thị một số thông báo */
    h1 {
        font-size: 24px;
        color: #343a40;
        font-weight: bold;
    }

    /* Bảng thông báo lỗi hoặc thành công */
    .alert {
        margin-top: 20px;
    }
</style>

<div id="PhanQuyen">
    <div class="container">
        <h1>Quản lý nhập kho</h1>
        <a class="btn btn-primary" asp-action="Create" style="font-size: 20px; background-color: forestgreen;">Tạo mới</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NameProduct)</th>
                    <th>@Html.DisplayNameFor(model => model.NumberInput)</th>
                    <th>@Html.DisplayNameFor(model => model.Total)</th>
                    <th>@Html.DisplayNameFor(model => model.DateIn)</th>
                    <th>Sản phẩm</th>
                    <th>Nhà cung cấp</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NameProduct)</td>
                        <td>@Html.DisplayFor(modelItem => item.NumberInput)</td>
                        <td>@Html.DisplayFor(modelItem => item.Total)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateIn)</td>
                        <td>@item.Product?.Title </td>
                        <td>@item.Suppliers?.Name </td>
                        <td>
                           @*  <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Sửa</a> | *@
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>