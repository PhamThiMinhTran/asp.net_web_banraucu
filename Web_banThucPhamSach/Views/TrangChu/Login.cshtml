@model Web_banThucPhamSach.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<style>
    .error-message {
        display: none;
        position: absolute;
        top: 20px; /* Khoảng cách từ trên xuống */
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(255, 0, 0, 0.8); /* Màu nền đỏ trong suốt */
        color: white; /* Màu chữ trắng */
        padding: 15px;
        border-radius: 5px; /* Bo tròn góc */
        width: 80%; /* Chiều rộng khung */
        max-width: 600px; /* Chiều rộng tối đa */
        text-align: center; /* Canh giữa chữ */
        z-index: 1000; /* Đảm bảo nó hiển thị trên cùng */
    }
</style>
<body>
    @*  <form asp-controller="TrangChu" asp-action="Login" asp-route-returnurt="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" action="/Users/Register"> *@
    <div class="container">
        <img src="~/images/hinhnen.jpg" alt="Hình nền" class="hinhnen">
        <div id="error-message" class="error-message" style="display: @(ViewData.ModelState.IsValid ? "none" : "block")">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="signin-signup">
            <!-- sing in -->
            <form class="sign-in-form" asp-controller="TrangChu" asp-action="Login" asp-route-returnurt="@ViewData["ReturnUrl"]" method="post">
                <h2 class="title">Đăng nhập</h2>
                <div class="input-field">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Nhập tên đăng nhập" name="username">
                </div>

                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" placeholder="Nhập mật khẩu" name="password">
                </div>

                <input type="submit" value="Sign in" class="btn">
                <p>Đăng nhập tài khoản với các trang mạng như</p>
                <div class="social-media">
                    <a href="" class="social-icon"><i class="fa-brands fa-facebook"></i></a>
                    <a href="" class="social-icon"><i class="fa-brands fa-twitter"></i></a>
                    <a href="" class="social-icon"><i class="fa-brands fa-google"></i></a>
                    <a href="" class="social-icon"><i class="fa-brands fa-instagram"></i></a>
                </div>
            </form>
            <!-- sing up -->
            <form class="sign-up-form" method="post" asp-controller="Users" asp-action="Register">
                <h2 class="title">Đăng ký</h2>
                <div class="input-field">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Nhập tên đăng ký" name="username" id="surname">
                </div>
                <div class="input-field">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="text" placeholder="Nhập số điện thoại đăng ký" name="PhoneNumber" id="phonenumber">
                </div>
                <div class="input-field">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" placeholder="Nhập mật khẩu" name="password" id="password">
                </div>

                <input type="submit" value="Sign up" class="btn">
                <p>Đăng ký tài khoản với các trang mạng như</p>
                <div class="social-media">
                    <a href="" class="social-icon"><i class="fa-brands fa-facebook"></i></a>
                    <a href="" class="social-icon"><i class="fa-brands fa-twitter"></i></a>
                    <a href="" class="social-icon"><i class="fa-brands fa-google"></i></a>
                    <a href="" class="social-icon"><i class="fa-brands fa-instagram"></i></a>
                </div>
            </form>
        </div>

        <div class="panel-container">
            <div class="panel panel-left">
                <div class="content">
                    <h3>Bạn đã có tài khoản tại MinhTran?</h3>
                    <p>Bạn đã có một tài khoản tại cửa hàng MinhTran? <br> Điều đó thật tuyệt!!!</p>
                    <button class="btn" id="sign_in_btn">Sign in</button>
                </div>
                <img src="~/images/image1.svg" alt="image" class="image">
            </div>

            <div class="panel panel-right">
                <div class="content">
                    <h3>Bạn muốn bắt đầu mua sắm MinhTran?</h3>
                    <p>Bạn muốn được mua hàng tại cửa hàng MinhTran? <br> Vậy thực hiện đăng ký tài khoản nào!!!</p>
                    <button class="btn" id="sign_up_btn">Sign up</button>
                </div>
                <img src="~/images/image2.svg" alt="image" class="image">
            </div>
        </div>
    </div>
    @*     </form> *@
    <script src="~/js/Login-up.js"></script>
</body>

</html>